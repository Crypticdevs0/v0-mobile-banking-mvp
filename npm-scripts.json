{
  "scripts": {
    "dev:backend": "cd backend && NODE_ENV=development nodemon server.js",
    "dev:frontend": "next dev",
    "dev:all": "npm run dev:backend & npm run dev:frontend",
    "build": "next build",
    "build:backend": "tsc backend/server.ts",
    "start": "next start",
    "start:backend": "cd backend && NODE_ENV=production node server.js",
    "start:frontend": "next start",
    "start:all": "npm run start:backend & npm run start:frontend",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "health:backend": "curl http://localhost:3001/api/health",
    "health:frontend": "curl http://localhost:3000",
    "health:all": "npm run health:backend && npm run health:frontend",
    "db:migrate": "echo 'Run migrations in Supabase SQL Editor'",
    "db:seed": "node backend/scripts/seed.js",
    "db:reset": "echo 'Reset database via Supabase dashboard'",
    "db:check": "node backend/scripts/check-connection.js",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf .next dist node_modules && npm install",
    "setup": "bash setup-env.sh && npm install",
    "deploy:vercel": "vercel deploy --prod",
    "deploy:heroku": "git push heroku main"
  },
  "description": "Run these scripts with: npm run [script-name]"
}
